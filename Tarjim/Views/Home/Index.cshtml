<!-- سكربت تشغيل التايملاين -->
<script>
    window.addEventListener("load", function () {
        const items = document.querySelectorAll("#vertical-scrollable-timeline li");
        const progress = document.querySelector(".list-progress .inner");

        if (!items.length || !progress) {
            console.warn("❗ عناصر التايملاين مش لاقيها.");
            return;
        }

        function updateTimeline() {
            let scrollTop = window.scrollY + window.innerHeight / 2;

            items.forEach((item, index) => {
                if (item.offsetTop < scrollTop) {
                    item.classList.add("active");
                    progress.style.height = `${index * 170 + 170}px`;
                }
            });
        }

        window.addEventListener("scroll", updateTimeline);
        updateTimeline();
    });
</script>







