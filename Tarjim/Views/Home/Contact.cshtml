@{
    Layout = "_Layout";
    ViewData["Title"] = "اتصل بنا";
    ViewData["HideNavbar"] = true;
}

@await Html.PartialAsync("_Navbar")

<section class="py-20 bg-tarjim-light-green" dir="rtl">
    <div class="section-container">
        <div class="text-center mb-16">
            <img src="/images/Tarjim_Logo_Arabic_Standard.png" alt="Tarjim Logo" class="mx-auto mb-4 w-28">
            <h1 class="text-4xl font-extrabold text-tarjim-green mb-4">تواصل معنا</h1>
            <p class="text-gray-700 max-w-2xl mx-auto text-lg">
                نحن هنا لخدمتك. إذا كان لديك أي استفسار أو اقتراح، لا تتردد في التواصل مع فريقنا.
            </p>
        </div>

        <div class="grid md:grid-cols-2 gap-12 items-start">
            <!-- نموذج التواصل -->
            <div class="bg-white p-10 rounded-2xl shadow-xl">
                <form id="contactForm">
                    <div class="mb-6">
                        <label class="block text-gray-800 font-semibold mb-2">الاسم الكامل</label>
                        <input type="text" placeholder="مثال: أحمد الخطيب" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tarjim-green">
                    </div>
                    <div class="mb-6">
                        <label class="block text-gray-800 font-semibold mb-2">البريد الإلكتروني</label>
                        <input type="email" placeholder="example@email.com" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tarjim-green">
                    </div>
                    <div class="mb-6">
                        <label class="block text-gray-800 font-semibold mb-2">الرسالة</label>
                        <textarea rows="5" placeholder="اكتب رسالتك هنا..." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tarjim-green"></textarea>
                    </div>
                    <button type="submit" class="w-full bg-tarjim-green text-white py-3 rounded-lg text-lg font-semibold hover:bg-green-600 transition">
                        إرسال الرسالة
                    </button>
                </form>
            </div>

            <!-- معلومات الاتصال -->
            <div class="space-y-8">
                <div class="flex items-start gap-5">
                    <div class="w-14 h-14 bg-white shadow-md rounded-full flex items-center justify-center">
                        <i class="fas fa-phone text-tarjim-green text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-900 mb-1">الهاتف</h3>
                        <p dir="ltr" class="text-gray-700">+962 796 503 949</p>
                    </div>
                </div>
                <div class="flex items-start gap-5">
                    <div class="w-14 h-14 bg-white shadow-md rounded-full flex items-center justify-center">
                        <i class="fas fa-envelope text-tarjim-green text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-900 mb-1">البريد الإلكتروني</h3>
                        <p class="text-gray-700">info@tarjim.com</p>
                    </div>
                </div>
                <div class="flex items-start gap-5">
                    <div class="w-14 h-14 bg-white shadow-md rounded-full flex items-center justify-center">
                        <i class="fas fa-map-marker-alt text-tarjim-green text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-900 mb-1">العنوان</h3>
                        <p class="text-gray-700">عمان، الأردن</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
