@model Tarjim.ViewModels.ProjectDetailsViewModel
@{
    ViewData["Title"] = "تفاصيل المشروع";
    Layout = User.IsInRole("Translator")
        ? "~/Views/Shared/_TranslatorLayout.cshtml"
        : "~/Views/Shared/_ClientLayout.cshtml";
}

