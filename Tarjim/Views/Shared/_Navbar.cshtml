<header id="mainNavbar"
        class="fixed top-0 right-0 left-0 z-50 transition-all duration-300 bg-transparent backdrop-blur-sm py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
          
            <div class="flex items-center">
                <a href="/" class="flex items-center">
                  
                    <img src="/images/Tarjim_Logo_Arabic_Standard.png" alt="Tarjim Logo" class="h-10 w-auto" />
                </a>
            </div>

            
            <nav class="hidden md:flex space-x-10 space-x-reverse">
                <a href="/" class="text-gray-800 hover:text-tarjim-green px-3 py-2 text-base font-medium">الصفحة الرئيسية</a>
                <a href="/Home/About" class="text-gray-800 hover:text-tarjim-green px-3 py-2 text-base font-medium">نبذة عنا</a>
                <a href="#features" class="text-gray-800 hover:text-tarjim-green px-3 py-2 text-base font-medium">مزايا المنصة</a>
                <a href="/Home/Contact" class="text-gray-800 hover:text-tarjim-green px-3 py-2 text-base font-medium">اتصل بنا</a>
                <a href="/Auth/ChooseRole" class="text-white bg-tarjim-green hover:bg-tarjim-green/90 px-4 py-2 rounded-lg text-sm font-semibold transition">سجّل الآن</a>
            </nav>

            
            <div class="md:hidden flex items-center">
                <button id="mobileMenuToggle" class="p-2 text-gray-700 hover:text-tarjim-green focus:outline-none">
                    <svg id="menuIcon" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

   
    <div id="mobileMenu" class="md:hidden hidden bg-white shadow-md px-4 py-4">
        <a href="#" class="block py-2 text-gray-800 hover:text-tarjim-green">الصفحة الرئيسية</a>
        <a href="/Home/About" class="block py-2 text-gray-800 hover:text-tarjim-green">نبذة عنا</a>
        <a href="#features" class="block py-2 text-gray-800 hover:text-tarjim-green">مزايا المنصة</a>
        <a href="/Home/Contact" class="block py-2 text-gray-800 hover:text-tarjim-green">اتصل بنا</a>
        <a href="/Account/ChooseRole" class="block mt-2 bg-tarjim-green text-white text-center py-2 rounded-lg hover:bg-tarjim-green/90 transition">سجّل الآن</a>
    </div>
</header>
<script>
        // Function to handle the mobile menu toggle
    function handleMobileMenu() {
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const mobileMenu = document.getElementById('mobileMenu');
        const menuIcon = document.getElementById('menuIcon');

        if (!mobileMenuToggle || !mobileMenu) return;

        mobileMenuToggle.addEventListener('click', function() {
            // Toggle the mobile menu visibility
            const isHidden = mobileMenu.classList.contains('hidden');

            if (isHidden) {
                mobileMenu.classList.remove('hidden');
                // Optionally change the menu icon to X
                if (menuIcon) {
                    menuIcon.innerHTML = `
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    `;
                }
            } else {
                mobileMenu.classList.add('hidden');
                // Restore the original menu icon
                if (menuIcon) {
                    menuIcon.innerHTML = `
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    `;
                }
            }
        });

        // Close menu when clicking on mobile menu links (optional)
        const mobileMenuLinks = mobileMenu.querySelectorAll('a');
        mobileMenuLinks.forEach(link => {
            link.addEventListener('click', function() {
                mobileMenu.classList.add('hidden');
                // Restore original menu icon
                if (menuIcon) {
                    menuIcon.innerHTML = `
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    `;
                }
            });
        });
    }

    // Handle fixed header behavior
    function handleFixedHeader() {
        const navbar = document.getElementById('mainNavbar');
        if (!navbar) return;

        function updateHeader() {
            if (window.scrollY > 10) {
                navbar.classList.add('bg-white', 'shadow-md', 'py-2');
                navbar.classList.remove('bg-transparent', 'py-4');
            } else {
                navbar.classList.remove('bg-white', 'shadow-md', 'py-2');
                navbar.classList.add('bg-transparent', 'py-4');
            }
        }

        window.addEventListener('scroll', updateHeader);
        // Initialize on page load
        updateHeader();
    }

    // Initialize when DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
        handleMobileMenu();
        handleFixedHeader();
    });
</script>