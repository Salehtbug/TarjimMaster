<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ترجيم</title>

    <!-- Tajawal Font -->
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;800&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">

    <!-- Main Stylesheets -->
    <link href="~/css/dashboardclient.css" rel="stylesheet" />
    <link href="~/css/filter-styles.css" rel="stylesheet" />
    <link href="~/css/Custom-fixes.css" rel="stylesheet" />

    <!-- Additional Styles -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="logo-section">
            <div class="user-profile">
                <div class="avatar">م أ</div>
                <div class="user-info">
                    <div class="user-name">محمد أحمد</div>
                    <div class="user-role">العميل</div>
                </div>
            </div>
        </div>

        <div class="header-icons">
            <button class="icon-btn">
                <i class="fas fa-cog"></i>
            </button>
            <button class="icon-btn">
                <i class="fas fa-comment"></i>
            </button>
            <button class="icon-btn">
                <i class="fas fa-bell"></i>
                <span class="notification-badge"></span>
            </button>
        </div>

        <div class="search-container">
            <input type="text" placeholder="ابحث هنا" class="search-input" id="searchInput">
            <i class="fas fa-search search-icon"></i>
        </div>

        <img src="~/images/Tarjim_Logo_Arabic_Standard.png" alt="ترجيم" class="logo">
    </header>

    <!-- Main Content -->
    @RenderBody()

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>