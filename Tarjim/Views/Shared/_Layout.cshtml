<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tarjim</title>

    <!-- CSS Links -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tarjim.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/main.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@200;300;400;500;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="@Url.Content("~/css/landing-style.css")" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>
<body dir="rtl" lang="ar">
    @if (!(ViewData["HideNavbar"] as bool? ?? false))
    {
        @await Html.PartialAsync("_Navbar")
    }

    <main>
        @RenderBody()
    </main>


    @if (!(ViewData["HideFooter"] as bool? ?? false))
    {
        var currentYear = DateTime.Now.Year;
        <footer class="bg-tarjim-dark text-white py-12" dir="rtl">
            <div class="section-container">
                <div class="grid md:grid-cols-4 gap-8">

                    <!-- Logo & وصف -->
                    <div class="space-y-4">
                        <img src="/images/TarjimSign.png" alt="Tarjim logo" class="h-10 w-auto" />
                        <p class="text-gray-400 text-sm">
                            منصة متكاملة تجمع بين المترجمين المحترفين وأصحاب الأعمال لتسهيل عملية التواصل وتنفيذ المشاريع بكفاءة عالية.
                        </p>
                    </div>

                    <!-- روابط سريعة -->
                    <div>
                        <h3 class="font-bold text-lg mb-4">روابط سريعة</h3>
                        <ul class="space-y-2 text-sm">
                            <li><a href="/" class="text-gray-400 hover:text-tarjim-green transition-colors">الصفحة الرئيسية</a></li>
                            <li><a href="/Home/About" class="text-gray-400 hover:text-tarjim-green transition-colors">نبذة عنا</a></li>
                            <li><a href="#" class="text-gray-400 hover:text-tarjim-green transition-colors">خدماتنا</a></li>
                            <li><a href="/Home/Contact" class="text-gray-400 hover:text-tarjim-green transition-colors">اتصل بنا</a></li>
                        </ul>
                    </div>

                    <!-- تواصل معنا -->
                    <div>
                        <h3 class="font-bold text-lg mb-4">تواصل معنا</h3>
                        <ul class="space-y-2 text-sm text-gray-400">
                            <li class="flex items-start">
                                <i class="fas fa-phone ml-2 mt-1 text-tarjim-green"></i>
                                <span dir="ltr" class="text-gray-400">+962 796 503 949</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-envelope ml-2 mt-1 text-tarjim-green"></i>
                                <span>info@tarjim.com</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-map-marker-alt ml-2 mt-1 text-tarjim-green"></i>
                                <span>عمان، المملكة الأردنية الهاشمية</span>
                            </li>
                        </ul>
                    </div>

                    <!-- سوشال ميديا -->
                    <div>
                        <h3 class="font-bold text-lg mb-4">تابعنا</h3>
                        <div class="flex space-x-4 space-x-reverse text-lg">
                            <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-tarjim-green rounded-full flex items-center justify-center transition">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-tarjim-green rounded-full flex items-center justify-center transition">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-tarjim-green rounded-full flex items-center justify-center transition">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a href="#" class="w-10 h-10 bg-gray-800 hover:bg-tarjim-green rounded-full flex items-center justify-center transition">
                                <i class="fab fa-whatsapp"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="mt-12 pt-8 border-t border-gray-800 text-center text-sm text-gray-400">
                    &copy; @currentYear ترجم - جميع الحقوق محفوظة
                </div>
            </div>
        </footer>
    }

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
