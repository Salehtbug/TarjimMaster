@model List<Tarjim.ViewModels.ProjectCardViewModel>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-icon"><i class="fas fa-folder-open"></i></div>
        <h3 class="empty-title">لا توجد طلبات في الوقت الحالي</h3>
        <p class="empty-message">نساعدك في أول خطوة! اضغط على "نشر وظيفة جديدة" للبدء.</p>
    </div>
}
else
{
    @foreach (var job in Model)
    {
        string statusClass = "";
        string badgeClass = "";
        string statusIcon = "";

        switch (job.Status)
        {
            case "مكتمل":
                statusClass = "completed";
                badgeClass = "completed";
                statusIcon = "fas fa-check-circle";
                break;
            case "قيد التنفيذ":
                statusClass = "in-progress";
                badgeClass = "in-progress";
                statusIcon = "fas fa-hourglass-half";
                break;
            case "لم يقبل بعد":
                statusClass = "not-accepted";
                badgeClass = "not-accepted";
                statusIcon = "fas fa-clock";
                break;
            default:
                statusClass = "";
                badgeClass = "";
                statusIcon = "fas fa-question-circle";
                break;
        }

        <div class="job-card">
            <div class="status-bar @statusClass"></div>
            <div class="job-content">
                <div class="job-header">
                    <h3 class="job-title">طلب رقم @job.ProjectId</h3>
                    <p class="job-subtitle">ترجمة شهادة خبرة</p>
                </div>

                <div class="job-dates">
                    <div class="job-date">تاريخ النشر: @job.CreatedAt.ToString("dd/MM/yyyy")</div>
                    @if (job.Deadline != DateTime.MinValue)
                    {
                        <div class="job-date">تاريخ الإنتهاء: @job.Deadline.ToString("dd/MM/yyyy")</div>
                    }
                </div>

                <div class="job-actions">
                    <div class="status-badge @badgeClass">
                        @job.Status
                        <i class="@statusIcon"></i>
                    </div>
                    <button class="delete-btn" data-id="@job.ProjectId" title="حذف المشروع">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </div>
        </div>
    }
}