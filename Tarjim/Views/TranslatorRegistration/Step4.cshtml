@model Tarjim.ViewModels.TranslatorRegisterStep4ViewModel

@{
    ViewData["Title"] = "الشهادات الإضافية - مترجم";
    ViewData["HideNavbar"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/translatorregister.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
}

<section class="register-container" dir="rtl" lang="ar">
    <div class="register-box">
        <div class="register-side fade-in">
            <img src="/images/Tarjim_Logo_Arabic_Standard.png" alt="شعار ترجم" class="register-logo" />
            <p class="register-welcome">معلوماتك الشخصية ليتعرف عليك العملاء ✨</p>
            <img src="/images/illustration_translator.png" class="illustration-image" alt="صورة توضيحية" />
        </div>

        <div class="register-card">
            <div class="register-progress">
                <ol class="progress-steps">
                    <li class="step">
                        <div class="circle">✓</div>
                        <span class="label">المعلومات الشخصية</span>
                    </li>
                    <li class="divider"></li>
                    <li class="step">
                        <div class="circle">✓</div>
                        <span class="label">الموقع</span>
                    </li>
                    <li class="divider"></li>
                    <li class="step">
                        <div class="circle">✓</div>
                        <span class="label">الوثائق والتعليم</span>
                    </li>
                    <li class="divider"></li>
                    <li class="step active">
                        <div class="circle">4</div>
                        <span class="label">الشهادات</span>
                    </li>
                    <li class="divider"></li>
                    <li class="step">
                        <div class="circle">5</div>
                        <span class="label">المهارات</span>
                    </li>
                </ol>
            </div>

            <form asp-action="Step4" asp-controller="TranslatorRegistration" method="post" class="register-form">
                <div asp-validation-summary="ModelOnly" class="register-error text-center mb-4"></div>

                <h2 class="text-xl font-semibold mb-6 text-center">الشهادات الإضافية</h2>

                <div class="form-group">
                    <label asp-for="CertificateName" class="register-label">إسم الشهادة</label>
                    <input asp-for="CertificateName" class="register-input" placeholder="أدخل إسم الشهادة" />
                    <span asp-validation-for="CertificateName" class="register-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Institution" class="register-label">الجهة المانحة</label>
                    <select asp-for="Institution" class="register-input">
                        <option value="">إختر الجهة المانحة</option>
                        <option value="جامعة">جامعة</option>
                        <option value="مؤسسة تعليمية">مؤسسة تعليمية</option>
                        <option value="منظمة دولية">منظمة دولية</option>
                        <option value="شركة خاصة">شركة خاصة</option>
                        <option value="أخرى">أخرى</option>
                    </select>
                    <span asp-validation-for="Institution" class="register-error"></span>
                </div>

                <div class="form-group">
                    <label class="register-label">تاريخ الإصدار</label>
                    <div style="display: flex; gap: 1rem;">
                        <div style="flex: 1;">
                            <select asp-for="IssueMonth" class="register-input">
                                <option value="">الشهر</option>
                                <option value="1">يناير</option>
                                <option value="2">فبراير</option>
                                <option value="3">مارس</option>
                                <option value="4">إبريل</option>
                                <option value="5">مايو</option>
                                <option value="6">يونيو</option>
                                <option value="7">يوليو</option>
                                <option value="8">أغسطس</option>
                                <option value="9">سبتمبر</option>
                                <option value="10">أكتوبر</option>
                                <option value="11">نوفمبر</option>
                                <option value="12">ديسمبر</option>
                            </select>
                            <span asp-validation-for="IssueMonth" class="register-error"></span>
                        </div>
                        <div style="flex: 1;">
                            <select asp-for="IssueYear" class="register-input">
                                <option value="">السنة</option>
                                @for (int i = DateTime.Now.Year; i >= 1990; i--)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            <span asp-validation-for="IssueYear" class="register-error"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-6 text-center">
                    <p class="text-sm text-gray-500 mb-2">* هذه المعلومات اختيارية ويمكنك تخطيها إذا لم تكن لديك شهادات إضافية</p>
                </div>

                <div class="form-group" style="display: flex; gap: 1rem;">
                    <a asp-action="Step3" asp-controller="TranslatorRegistration" style="
                        background-color: #f0f0f0;
                        color: #555;
                        padding: 0.75rem 1.5rem;
                        font-weight: 600;
                        font-size: 1rem;
                        border-radius: 9999px;
                        text-align: center;
                        width: 25%;
                        text-decoration: none;
                    ">رجوع</a>
                    <button type="submit" class="registert-button" style="width: 75%;">التالي</button>
                </div>
            </form>
        </div>
    </div>

    <!-- عناصر زخرفية للخلفية -->
    <span class="register-decor decor-1">مترجم</span>
    <span class="register-decor decor-2">ترجم</span>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
